<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.project_student.Controller"
          vgap="10" hgap="10">
<VBox>
    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button fx:id="login" text="LOGIN" GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#login"/>
    <Label />
    <Label text="if you don't have account please sign up" />
    <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="fName" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="lName" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <TextField fx:id="email2" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
    <PasswordField fx:id="passwordField2" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
    <Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
    <TextField fx:id="phone" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
    <Label text="Specialize" GridPane.columnIndex="0" GridPane.rowIndex="15"/>
    <TextField fx:id="specialize" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
    <Button fx:id="register" text="REGISTER" GridPane.columnIndex="0" GridPane.rowIndex="17" onAction="#addStudent" />
</VBox>

</GridPane>
